{% extends 'base.html.twig' %}

{% block title %} Swift Transfer - Register{% endblock %}

{% block body %}
    <h1 class="text-3xl text-center mt-16">Register to Swift Transfer</h1>
        {{ form_start(registrationForm) }}
    <div class="flex justify-center items-center mt-16">
        <div class="w-full max-w-md p-8 bg-white shadow-md rounded-2xl text-lg">
                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2" >Username</label>
                    <input placeholder="Enter an username" value="{{ field_value(registrationForm.username) }}" name="{{ field_name(registrationForm.username) }}" class="form-control block w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 border-gray-300" required autofocus>
                    {% for error in registrationForm.username.vars.errors %}
                    <p class="text-red-500 text-md italic"> - {{ error.message ?: error.minMessage ?: error.maxMessage }}</p>
                    {% endfor %}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2" >Displayed name</label>
                    <input placeholder="Enter a name" value="{{ field_value(registrationForm.displayedName) }}" name="{{ field_name(registrationForm.displayedName) }}" class="form-control block w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 border-gray-300" required autofocus>
                    {% for error in registrationForm.displayedName.vars.errors %}
                    <p class="text-red-500 text-md italic"> - {{ error.message ?: error.minMessage ?: error.maxMessage }}</p>
                    {% endfor %}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2">Email</label>
                    <input type="email" placeholder="Enter an email" value="{{ field_value(registrationForm.email) }}" name="{{ field_name(registrationForm.email) }}" class="form-control block w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 border-gray-300" required autofocus>
                    {% for error in registrationForm.email.vars.errors %}
                    <p class="text-red-500 text-md italic"> - {{ error.message }}</p>
                    {% endfor %}
                </div>

                <div class="mb-4">
                    <label class="block text-gray-700 font-bold mb-2">Password</label>
                    <input type="password" placeholder="Enter a password" value="{{ field_value(registrationForm.plainPassword) }}" name="{{ field_name(registrationForm.plainPassword) }}" class="form-control block w-full px-3 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 border-gray-300" required autofocus>
                    {% for error in registrationForm.plainPassword.vars.errors %}
                    <p class="text-red-500 text-md italic"> - {{ error.message ?: error.minMessage ?: error.maxMessage }}</p>
                    {% endfor %}
                </div>

                <div class="mb-4">
                    <label class="text-gray-700 font-bold mr-2 mb-4">Agree 
                        <a class="text-purple-500" href="{{path('app_terms')}}">Terms</a>
                    </label>
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {% for error in registrationForm.agreeTerms.vars.errors %}
                    <p class="text-red-500 text-md italic"> - {{ error.message }}</p>
                    {% endfor %}
                </div>
                

                <button type="submit" class="text-xl mt-2 px-5 pb-1 border-2 rounded-xl text-white bg-purple-950 border-purple-950 hover:text-purple-700 hover:text-purple-700 hover:bg-white">Register</button>
        </div>
    </div>
</div>


        
    {{ form_end(registrationForm) }}
{% endblock %}
